@model MovieApi.Dto.Dtos.MovieDtos.ResultMovieDetailsDto


@{
	ViewData["Title"] = "MovieDetail";
	Layout = "~/Views/UserWebUILayout/LayoutUI.cshtml";
}


	
	<div class="container">
		<div class="row">
			<div class="col-md-12">
			</div>
		</div>
	</div>
	<div class="page-single movie-single movie_single">
		<div class="container">
			<div class="row ipad-width2">
			@await Component.InvokeAsync("_MovieImageAndWatchTrailerComponentPartial")


			<div class="col-md-8 col-sm-12 col-xs-12">
				<div class="movie-single-ct main-content">
					<h1 class="bd-hd">@Model.Title<span>@Model.CreatedYear</span></h1>
					@await Component.InvokeAsync("_MovieDetailShareSocialMediaComponentPartial")
					@await Component.InvokeAsync("_MovieDetailRateComponentPartial")

					<div class="movie-tabs">
						<div class="tabs">
							<ul class="tab-links tabs-mv">
								<li class="active"><a href="#overview">Hakkında</a></li>
								<li><a href="#reviews"> Yorumlar</a></li>
								<li><a href="#cast">  Oyuncular </a></li>
								<li><a href="#media"> Medya</a></li>
								<li><a href="#moviesrelated"> Benzer</a></li>
							</ul>

							<div class="tab-content">
								@await Component.InvokeAsync("_MovieDetailOverviewComponentPartial")
								
								@await Component.InvokeAsync("_MovieDetailReviewComponentPartial")


								@await Component.InvokeAsync("_MovieDetailCastComponentPartial")

								@await Component.InvokeAsync("_MovieDetailMediaComponentPartial")
								
								@await Component.InvokeAsync("_MovieDetailRelatedMoviesComponentPartial")

							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

